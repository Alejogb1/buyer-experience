generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String
  description String
  products    Product[]
}

model Form {
  id          Int      @id @default(autoincrement())
  email       String
  productName String
  createdAt   DateTime @default(now())
}

model DemoForm {
  id Int @id @default(autoincrement())
  name String
  business_email String
  phone_number String
  job_title String
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  logo        String
  description String
  rating      Int
  website_url String
  categories  Category[]
}

model Review {
  id             Int      @id @default(autoincrement())
  name           String
  email          String
  item_name      String
  review_message String
  user_rating    String
  createdAt      DateTime @default(now())
}

model Provider {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  site_url  String
  createdAt DateTime @default(now())
}

model CategoryToProduct {
  A Int
  B Int

  @@unique([A, B], map: "_CategoryToProduct_AB_unique")
  @@index([B], map: "_CategoryToProduct_B_index")
  @@map("_CategoryToProduct")
}
